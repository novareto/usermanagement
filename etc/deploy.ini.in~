[pipeline:main]
pipeline = gzip session fanstatic sqlcontainer

[filter:fanstatic]
use = egg:fanstatic#fanstatic
recompute_hashes = false
versioning = true
bottom = true
minified = true

[filter:session]
use = egg:cromlech.wsgistate#file_session
session_key = session.key
session_cache = /tmp/ 

[filter:gzip]
use = egg:Paste#gzip

[filter:locale]
use = egg:cromlech.i18n#locale

[app:sqlcontainer]
use = egg:sqlcontainer#app
name = sqlcontainer
zcml_file = ${zcml:output}
session_key = session.key

[server:main]
use = egg:Paste#http
host = 0.0.0.0
port = 8080
